@model MeiMaths.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">üìä Admin Dashboard</h2>

@if (Model.StatusMessage is not null)
{
    <div class="alert @(Model.StatusSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- ‚îÄ‚îÄ Opgaves√¶t administration ‚îÄ‚îÄ -->
<div class="card shadow-sm mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">üìÅ Opgaves√¶t (@Model.ExerciseSets.Count indl√¶st)</h5>
        <form method="post" asp-page-handler="Refresh" class="d-inline">
            <button type="submit" class="btn btn-outline-primary btn-sm">üîÑ Genindl√¶s fra disk</button>
        </form>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-sm mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Filnavn</th>
                        <th>Titel</th>
                        <th>ID</th>
                        <th>Kategori</th>
                        <th class="text-center">Opgaver</th>
                        <th class="text-center">Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var es in Model.ExerciseSets)
                    {
                        <tr>
                            <td><code>@es.FileName</code></td>
                            <td>@es.Title</td>
                            <td><code>@es.Id</code></td>
                            <td>@es.Category</td>
                            <td class="text-center">@es.QuestionCount</td>
                            <td class="text-center">
                                @if (es.IsValid)
                                {
                                    <span class="badge bg-success">‚úì OK</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">‚úó Fejl</span>
                                }
                            </td>
                            <td class="text-end">
                                <form method="post" asp-page-handler="DeleteExerciseSet" class="d-inline"
                                      onsubmit="return confirm('Er du sikker p√• du vil slette @es.FileName?');">
                                    <input type="hidden" name="filename" value="@es.FileName" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">üóëÔ∏è</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- ‚îÄ‚îÄ Tilf√∏j nyt opgaves√¶t ‚îÄ‚îÄ -->
<div class="card shadow-sm mb-4">
    <div class="card-header">
        <h5 class="mb-0">‚ûï Tilf√∏j nyt opgaves√¶t</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-page-handler="AddExerciseSet">
            <div class="mb-3">
                <label for="NewFileName" class="form-label"><strong>Filnavn</strong> (uden .json er OK)</label>
                <input asp-for="NewFileName" class="form-control" placeholder="f.eks. geometri-vinkler" />
            </div>
            <div class="mb-3">
                <label for="NewJsonContent" class="form-label"><strong>JSON-indhold</strong> (hele opgaves√¶ttet)</label>
                <textarea asp-for="NewJsonContent" class="form-control font-monospace" rows="14"
                          placeholder='{ "id": "mit-opgavesaet", "category": "Tal og algebra", "title": "Min titel", "description": "Beskrivelse", "questions": [ ... ] }'></textarea>
            </div>
            <button type="submit" class="btn btn-success">üíæ Gem opgaves√¶t</button>
        </form>
    </div>
</div>

<hr class="my-4" />

@if (Model.TopicProgress.Count > 0)
{
    <h4 class="mt-2 mb-3">üìà Fremskridt pr. emne</h4>
    <div class="table-responsive mb-4">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Opgaves√¶t</th>
                    <th class="text-center">Fors√∏g</th>
                    <th class="text-center">Brugere</th>
                    <th class="text-center">Rigtige</th>
                    <th class="text-center">Gennemsnit</th>
                    <th>Fremskridt</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var topic in Model.TopicProgress)
                {
                    <tr>
                        <td><strong>@topic.Title</strong></td>
                        <td class="text-center">@topic.TotalAttempts</td>
                        <td class="text-center">@topic.UniqueUsers</td>
                        <td class="text-center">@topic.TotalCorrect / @topic.TotalQuestions</td>
                        <td class="text-center">
                            <span class="badge @(topic.AveragePercent >= 80 ? "bg-success" : topic.AveragePercent >= 50 ? "bg-warning text-dark" : "bg-danger") fs-6">
                                @topic.AveragePercent%
                            </span>
                        </td>
                        <td>
                            <div class="progress" style="height: 20px; min-width: 120px;">
                                <div class="progress-bar @(topic.AveragePercent >= 80 ? "bg-success" : topic.AveragePercent >= 50 ? "bg-warning" : "bg-danger")"
                                     role="progressbar" style="width: @topic.AveragePercent%">
                                    @topic.AveragePercent%
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<h4 class="mt-4 mb-3">üë• Brugere</h4>

@if (Model.Users.Count == 0)
{
    <div class="alert alert-info">Ingen brugere fundet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Bruger</th>
                    <th>Visningsnavn</th>
                    <th class="text-center">Quizzer</th>
                    <th class="text-center">Rigtige</th>
                    <th class="text-center">Gennemsnit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr data-bs-toggle="collapse" data-bs-target="#details-@user.UserId.GetHashCode()" style="cursor:pointer;">
                        <td><strong>@user.UserName</strong></td>
                        <td>@user.DisplayName</td>
                        <td class="text-center">@user.TotalQuizzes</td>
                        <td class="text-center">@user.TotalScore / @user.TotalQuestions</td>
                        <td class="text-center">
                            @if (user.TotalQuizzes > 0)
                            {
                                <span class="badge @(user.AveragePercent >= 80 ? "bg-success" : user.AveragePercent >= 50 ? "bg-warning text-dark" : "bg-danger") fs-6">
                                    @user.AveragePercent%
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">‚Äî</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5" class="p-0 border-0">
                            <div class="collapse" id="details-@user.UserId.GetHashCode()">
                                @if (user.Results.Count == 0)
                                {
                                    <div class="p-3 text-muted">Ingen resultater endnu.</div>
                                }
                                else
                                {
                                    <table class="table table-sm table-striped mb-0 ms-4" style="max-width:90%;">
                                        <thead>
                                            <tr>
                                                <th>Opgaves√¶t</th>
                                                <th class="text-center">Score</th>
                                                <th class="text-center">Procent</th>
                                                <th>Tidspunkt</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var r in user.Results)
                                            {
                                                var pct = r.TotalQuestions > 0 ? (int)Math.Round(100.0 * r.Score / r.TotalQuestions) : 0;
                                                <tr>
                                                    <td>@r.ExerciseSetTitle</td>
                                                    <td class="text-center">@r.Score / @r.TotalQuestions</td>
                                                    <td class="text-center">@pct%</td>
                                                    <td>@r.CompletedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
